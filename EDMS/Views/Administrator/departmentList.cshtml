@model IEnumerable<EDMS.department>

@{
    ViewBag.Title = "List of Departments";
    var count = 0; 
}
<h2>List of Departments</h2>
<p>
    @Html.ActionLink("Create New", "departmentCreate")
</p>
<table class="table table-hover table-striped table-bordered" id="myTable">
    <thead>
        <tr>
            <th>
                S/N
            </th>
            <th>
                @Html.DisplayNameFor(model => model.deptName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @{ count++; } count
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.deptName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "departmentEdit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "departmentDetails", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "departmentDelete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.deptName)
            </th>
            <th></th>
        </tr>
    </tfoot>
</table>
